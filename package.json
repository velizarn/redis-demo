{
  "name": "redis-demo",
  "version": "0.0.1",
  "description": "A sample Redis demo app using node.js",
  "author": {
    "name": "Velizar Nenov",
    "url": "https://velizarn.github.io/"
  },
  "engines": {
    "node": "10.16.3"
  },
  "main": "src/web.js",
  "scripts": {
    "config:get": "heroku config -s > .env.local",
    "heroku-prebuild": "echo This runs before Heroku installs your dependencies.",
    "heroku-postbuild": "echo This runs afterwards.",
    "lint": "eslint --ext .js,.json,.jsx . --fix",
    "start": "node --optimize_for_size --max_old_space_size=460 --gc_interval=100 src/web.js",
    "start:dev": "nodemon --optimize_for_size --max_old_space_size=920 --gc_interval=100 src/web.js",
    "start:cluster": "nodemon --optimize_for_size --max_old_space_size=920 --gc_interval=100 src/web-cl.js",
    "start:local": "nf start",
    "test": "cross-env NODE_ENV=test mocha --timeout 10000 --exit",
    "test:dev": "cross-env NODE_ENV=test mocha --timeout 15000 --exit"
  },
  "dependencies": {
    "babel-eslint": "10.0.3",
    "bluebird": "3.5.5",
    "body-parser": "1.19.0",
    "chai": "4.2.0",
    "chai-http": "4.3.0",
    "connect-redis": "4.0.0",
    "dotenv": "8.1.0",
    "ejs": "2.6.2",
    "express": "4.17.1",
    "express-session": "1.16.2",
    "express-validator": "6.2.0",
    "helmet": "3.20.1",
    "heroku-logger": "0.3.3",
    "mocha": "6.2.0",
    "redis": "2.8.0",
    "request": "2.88.0",
    "request-promise": "4.2.4",
    "sqreen": "1.32.0",
    "throng": "4.0.0"
  },
  "devDependencies": {
    "cross-env": "5.2.1",
    "eslint": "6.3.0",
    "eslint-config-prettier": "6.1.0",
    "eslint-plugin-json": "1.4.0",
    "eslint-plugin-prettier": "3.1.1",
    "eslint-plugin-security": "1.4.0",
    "foreman": "3.0.1",
    "nodemon": "1.19.1",
    "prettier": "1.18.2",
    "tape": "4.11.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/velizarn/redis-demo.git"
  },
  "keywords": [
    "node",
    "heroku",
    "redis",
    "cache"
  ],
  "license": "MIT",
  "nodemonConfig": {
    "ignore": [
      "test/*",
      "public/*"
    ],
    "verbose": true,
    "colours": true
  }
}
